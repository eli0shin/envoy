  "license": "MIT",
  "scripts": {
    "build": "bun build src/cli/index.ts --compile --outfile ./bin/language-learner",
    "check": "bun run lint && bun run type && bun run test && bun run format",
    "dev": "ts-node src/cli/index.ts",
    "test": "vitest run --typecheck",
    "test:e2e": "vitest run e2e --config vitest.e2e.config.ts",
    "test:interactive": "vitest run --config vitest.interactive.config.ts",
    "test:interactive:watch": "vitest --config vitest.interactive.config.ts",
    "test:e2e:all": "vitest run e2e --config vitest.e2e.config.ts",
    "test:e2e:coverage": "vitest run --coverage e2e --config vitest.e2e.config.ts",
    "test:watch": "vitest src",
    "test:coverage": "vitest run --coverage src",
    "type": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "type": "module"
